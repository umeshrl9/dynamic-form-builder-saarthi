<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Form Builder</title>
    <link rel="stylesheet" href="/public/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <nav>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container">
              <a href="/" class="navbar-brand d-flex align-items-center">
                <strong>Dynamic Form Builder</strong>
              </a>
            </div>
          </div>
    </nav>
    <div class="mainContainer">
        <div class="container">
            <% if(fe.length === 0) {%>
            <h1>Add some elements to create a form using the buttons below!</h1>   
            <button class="btn btn-dark rounded-pill px-3" type="button" button onclick="location.href='/addtextbox'">Textbox</button>
            <button class="btn btn-info rounded-pill px-3" type="button" button onclick="location.href='/addmcq'">MCQ</button>
            <%} else{ %>
            <%   fe.forEach(el => { %>
                <div class="displayElement">
                    <h3><%= el.question %></h3>
                    <% if el.type === "text" {%>
                    <textarea name="" id="" cols="30" rows="10"></textarea>
                    <% } %>
                    <% if el.type === "mcq" {%>
                        <!-- MCQ options-->
                    <% } %>
                </div>
             <% }) %>
            <% } %>
        </div>
    </div>
</body>
</html>

